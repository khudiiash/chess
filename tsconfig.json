{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "src/server/dist",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/server/**/*", "./package.json"],
  "exclude": ["node_modules", "src/server/dist"],
  "lib": ["es2015"]
}